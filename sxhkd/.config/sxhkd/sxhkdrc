# vim: foldmethod=marker
# {{{1 WM stuff
# Power options
super + x
	powermenu

# restart bspwm
super + Escape
	bspc wm -r

# quit bspwm normally
super + alt + Escape
	bspc quit

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# Increase/decrease gaps
super + F{11,12}
	bspc config window_gap $((`bspc config window_gap` {+,-} 5))

#Set default gaps without restarting the WM
super + F10
	bspc config window_gap 10

# TODO: find if I need if
# FIXME: probably make it local
# swap the current node and the biggest node
# super + g
# 	bspc node -s biggest

# rotate windows on local desktop
super + {_,shift + }r
	bspc node --rotate {90,-90}

# {{{2 Tiling, floating, fullscreen
# set the window state
super + t
	bspc node -t tiled

super + f
	bspc node -t {fullscreen,\~fullscreen}

super + s
	bspc node -t {floating,\~floating}

super + shift + t
	bspc node -t {pseudo_tiled,\~pseudo_tiled}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# TODO: find out what each flag means
# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# {{{2 Focus/swap windows
# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# move node to the next/previous desktop in the current monitor
super + shift + bracket{left,right}
	bspc node focused --to-desktop {prev,next}.local --follow

# focus the last desktop
super + Tab
	bspc desktop -f last.local

# # TODO: find if I need it
# # focus the older or newer node in the focus history
# super + {o,i}
# 	bspc wm -h off; \
# 	bspc node {older,newer} -f; \
# 	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# Focus previous monitor
alt + Tab
	bspc desktop prev:focused -f

# Move focus to a different monitor
super + ctrl + {Left,Right}
	bspc monitor {west,east} --focus

# Move to a different monitor
super + shift + {Left,Right}
	bspc node focused --to-monitor {west,east} --follow

# Swap desktops on monitors
super + ctrl + shift + {Left,Right}
	bspc desktop focused --swap {west,east}:focused

# {{{2 Preselect
# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# {{{2 Move/resize windows
# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# {{{1 Audio
# Volume up/down with multimedia keys
XF86Audio{Raise,Lower}Volume
	volume.sh {up,down}

# Mute volume with multimedia key
XF86AudioMute
	volume.sh mute

# Toggle mic
XF86AudioMicMute
	volume.sh mute-input

super + F5
	volume.sh mute-input

XF86AudioPlay
	mocp -G

# {{{1 Manage apps
# terminal emulator
super + Return
	alacritty -e tmux

super + space
	appsmenu
	# rofi -show drun -scroll-method 1 -show-icons

super + d; {s,n,b,e,p}
	{scrotmenu,networkmenu,btmenu,dmenu_emoji.sh,passmenu-otp}

Print
	flameshot gui

super + d; shift + s
	scrotmenu --timeout

super + o; {_,shift} + n
	{networkmenu,nmvpnmenu}

# {{{2 Notifications
super + F1
	dunstctl close

super + shift + F1
	dunstctl close-all

super + F2
	dunstctl history-pop
